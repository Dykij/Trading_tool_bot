{
    "exclude_dirs": [
        "dmarket_bot_env",
        "venv",
        ".venv",
        "__pycache__",
        ".git",
        ".mypy_cache",
        ".pytest_cache",
        "build",
        "dist",
        "*.egg-info",
        "logs",
        "reports",
        "docs",
        "tmp",
        "temp_fix",
        "tmp_dir"
    ],
    "timeout_seconds": 600,
    "cache_enabled": true,
    "cache_max_age_days": 1,
    "report_formats": [
        "markdown"
    ],
    "log_dir": "logs",
    "report_dir": "reports",
    "venv_path": "dmarket_bot_env",
    "tools": {
        "flake8": {
            "args": "--max-line-length=120 --ignore=E501,W503 ."
        },
        "pylint": {
            "args": "--load-plugins pylint_django --django-settings-module=config.settings --max-line-length=120 --disable=missing-docstring,invalid-name ."
        },
        "mypy": {
            "args": "--follow-imports=silent --show-column-numbers ."
        },
        "bandit": {
            "args": "-r ."
        },
        "pytest": {
            "args": "-v --cov=."
        },
        "black": {
            "args": "--line-length=120 ."
        },
        "isort": {
            "args": "--profile black ."
        }
    }
}
